.results {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    align-items: center;
    font-size: 0.8em;
}

.results-text {
    flex: 1 1 auto;
    text-align: center;
    max-width: 100%;
}
.results-text ul {
    margin: 0px;
    padding: 10px;
}
.correct-answer {
    color: #008800;
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

