<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui">
    <meta name="mobile-web-app-capable" content="yes">
    <title><%= title %></title>
    <!--<link rel="stylesheet" href="bower_components/mobile-angular-ui/dist/css/mobile-angular-ui-base.min.css"/>-->
    <link rel="stylesheet" href="bower_components/angular-chart.js/dist/angular-chart.css">
    <link rel="stylesheet" href="stylesheets/responsive.min.css"/>
    <link rel="stylesheet" href="stylesheets/app.css"/>
    <link rel="stylesheet" href="bower_components/mobile-angular-ui/dist/css/mobile-angular-ui-desktop.min.css">
    <link rel='stylesheet' href='/stylesheets/player.css'/>

    <script src="bower_components/angular/angular.js"></script>
    <script src="bower_components/angular-route/angular-route.js"></script>
    <script src="bower_components/angular-cookies/angular-cookies.js"></script>
    <script src="bower_components/mobile-angular-ui/dist/js/mobile-angular-ui.min.js"></script>
    <script src="bower_components/mobile-angular-ui/dist/js/mobile-angular-ui.gestures.min.js"></script>
    <script src="bower_components/angular-socket-io/socket.js"></script>
    <!--    <script src="bower_components/d3/d3.js"></script>
        <script src="bower_components/nvd3/build/nv.d3.js"></script>
        <script src="bower_components/angularjs-nvd3-directives/dist/angularjs-nvd3-directives.js"></script>  -->
    <script src="bower_components/Chart.js/Chart.js"></script>
    <script src="bower_components/angular-chart.js/dist/angular-chart.js"></script>

    <script src="playerApp/playerApp.js"></script>
    <script src="playerApp/controllers/playerControllers.js"></script>
    <script src="playerApp/directives/playerAppDirectives.js"></script>
    <script src="playerApp/services/websocketServices.js"></script>
    <script src="playerApp/services/playerAppServices.js"></script>

</head>
<body ng-app="playerApp" ng-swipe-right='Ui.turnOn("uiSidebarLeft")'
      ng-swipe-left='Ui.turnOff("uiSidebarLeft")' ng-init="register()">

<!-- Sidebars -->
<div class="sidebar sidebar-left" ng-controller="MenuController">
    <div class="scrollable">
        <h1 class="scrollable-header app-name">Menu</h1>
        <div class="scrollable-content">
            <div class="list-group" ui-turn-off='uiSidebarLeft'>
                <div class="list-group-item">{{status.server.connected ? "Connected to Server as Client "+status.clientId : "Not Connected"}}</div>
                <div class="list-group-item">PingPong = {{pingTime}}, {{pingCount}},{{pingTimeouts}}</div>
                <a class="list-group-item" ng-click="joinGame()" ng-show="status.player.playerId == -1">
                    Not in the Game! Join.
                </a>
                <a class="list-group-item" ng-click="leaveGame()" ng-hide="status.player.playerId == -1">
                    In the Game as Player {{status.player.playerId }}! Leave.
                </a>
                <a class="list-group-item" href="#/rating">Rating
                    <i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="#/chat">Chat
                    <i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="#/vote">Vote
                    <i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="#/home">Home
                    <i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" ng-click="reload()">
                    Reload
                </a>
            </div>
        </div>
    </div>
</div>
<div class="app">
    <div class="navbar navbar-app navbar-absolute-top text-center red" ng-controller="NavbarController">
        <div ng-style="{'height': '100px'}">
            <div class="row1" ng-style="col1()">
                <h1><%= title %> </h1>
            </div>
            <div class="row2" ng-style="col2()">
                <div class="navbar-brand navbar-brand-center" ui-yield-to="title">
                    {{itemTypes[type]}}
                </div>
                <div class="btn-group pull-left">
                    <div ui-toggle="uiSidebarLeft" class="navbarbtn sidebar-toggle">
                        <i class="fa fa-bars"></i> Menu
                    </div>
                </div>
                <div class="btn-group pull-right">
                    <div class="navbarbtn" ng-click="go('/rating')">
                        <i class="fa fa-star"></i></div>
                    <div class="navbarbtn" ng-click="go('/chat')">
                        <i class="fa fa-comment"></i>
                        <span ng-show="newMessages>0" ng-style="{'color':'red', 'font-size':'0.6em', 'font-weight':'bold', 'position':'relative', 'right':'20px', 'bottom':'3px'}">
                            {{newMessages}}</span>
                    </div>
 <!--                    <div class="navbarbtn" ng-click="toVote()">VOTE</div>  -->
                </div>
            </div>
        </div>
    </div>

    <!-- App body -->
    <div class='app-body scrollable'>

        <div class='app-content text-center scrollable-content'>
            <div ng-show="debug">
                DEBUG: {{type}}, {{player}}, {{col1}}, {{avgRating}}
            </div>

            <div ng-show="player.playerId==-1">
                could not log you in to the game (maybe there already enough players?)
            </div>


            <div class="section content" ng-view>
            </div>
        </div>
    </div>
</div>
<!-- ~ .app -->

<!-- Modals and Overlays -->
<div ui-yield-to="modals"></div>

</body>

</html>
